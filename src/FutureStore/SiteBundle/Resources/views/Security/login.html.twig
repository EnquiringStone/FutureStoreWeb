{% extends "FutureStoreSiteBundle::layout.html.twig" %}
{% block title %}Login{% endblock %}
{% block content %}
	<form class="form-horizontal" action="{{ path('FutureStoreSiteBundle_profile_login_check') }}" method="POST">
		<fieldset class="login-fieldset">
			{% if error %}<div class="alert alert-error">{{ error.message }}</div>{% endif %}
			{{ form_widget(login_form, {'form_type': 'horizontal'}) }}
			<div class="control-group">
				<div class="controls">
					<button type="submit" class="btn">Sign in</button>
				</div>
			</div>
		</fieldset>
	</form>
	<p>Nog geen inloggegevens ? Klik <a href="{{ path('FutureStoreSiteBundle_profile_register') }}">hier</a> om te registreren</p>
{% endblock %}